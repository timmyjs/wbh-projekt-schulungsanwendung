{
	"assets": {
		"app.css": [
			"+assets/css/variables.*",
			"+assets/css/mixins.less",
			"!components/modules/Test*/*",
			"assets/css/cssreset.css",
			"assets/css/*.*",
			"components/modules/*/css/*.*",
			"components/modules/*/css/skins/*.*"
		],
		"app.js": [
			"!components/modules/Test*/*",
			"assets/js/jquery-2.1.4.min.js",
			"assets/js/terrific-2.1.0.min.js",
			"assets/js/terrific-extensions.js",
			"assets/js/*.js",
			"components/modules/*/js/*.js",
			"components/modules/*/js/skins/*.js"
		]
	},
	"micro": {
		"components": {
			"module": {
				"template": "project/templates/component",
				"path": "components/modules",
				"component_prefix": "mod",
				"skin_prefix": "skin"
			}
		},
		"view_file_extension": "html",
		"view_directory": "views",
		"view_partials_directory": "views/_partials"
	}
}
